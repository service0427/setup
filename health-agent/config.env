#===============================================================================
# Health Agent 설정 파일
# 위치: /opt/health-agent/config.env
#===============================================================================

# 중앙 서버 URL (서버 준비되면 설정)
HUB_URL="http://your-hub-server:3000/api/health"

# 데이터 전송 활성화 (서버 준비되면 true로 변경)
ENABLE_PUSH="false"

# 로그 디렉토리
LOG_DIR="/var/log/health-agent"

# 데이터 디렉토리
DATA_DIR="/opt/health-agent/data"

# 네트워크 복구 설정
MAX_FAILURES="3"                        # 이 횟수 이상 실패 시 재부팅
ENABLE_AUTO_REBOOT="false"              # 자동 재부팅 허용 (주의!)
PING_TARGETS="8.8.8.8 1.1.1.1 168.126.63.1"  # 연결 확인용 IP
